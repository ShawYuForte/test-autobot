<controls:PageControl x:Class="device.ui.controls.pages.WaitForChannelStartPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:device.ui.controls.pages"
             xmlns:controls="clr-namespace:device.ui.controls"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <controls:Countdown CanStop="False"
                            OnStop="StartChannelCountdown_OnStop" OnExpire="StartChannelCountdown_OnExpire"
                            EventName="Channel setup" CountdownTo="{Binding StartChannelAt}" VerticalAlignment="Bottom"
                            HorizontalAlignment="Center"
                            x:Name="StartChannelCountdown" />

    </Grid>
</controls:PageControl>